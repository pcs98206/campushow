extends base

block content 
    div.form_div.from_edit
        div
            form.form(method="post") 
                select(name="type", required=true, id="select", data-id=file._id, disabled)
                    option(value=file.mainType) #{file.mainType}
                input(type="text", placeholder="학교명", name="campus",required=true, value=file.campus)
                input(type="text", placeholder="수업명", name="subject",required=true, value=file.subject)
                input(type="text", placeholder="교수명", name="professor",required=true, value=file.professor)
                input(type="text", placeholder="학기", name="semester",required=true, value=file.semester)
                input(type="number", placeholder="가격", name="price",required=true, value=file.price)
                input(type="text", placeholder="판매글 제목 (100자 이하", name="title", max="100", min="2",required=true, value=file.title)
                textarea(name="description", cols="100", rows="10", placeholder="판매할 자료에 대한 구체적인 설명 (1500자 이하)",max="1500", min="2", required=true) #{file.description}
                input.input_submit(type="submit", value="등록하기")